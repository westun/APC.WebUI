@foreach (var product in SimilarProducts)
{
    <ul class="ps-0">
        <li>
            <span class="oi oi-circle-check text-success"></span>
            <a 
                class="text-success" 
                href="products/detail/@product.SimilarProduct.Id">
                @product.SimilarProduct.Name - @product.SimilarProduct.Type?.Name
            </a>
        </li>
    </ul>
}

@code {
    [Parameter]
    public IEnumerable<SimilarProductsDTO> SimilarProducts { get; set; }
}
